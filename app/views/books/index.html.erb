<h1>Books</h1>

<table class="pure-table" style="letter-spacing:normal;">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Reviews</th>
      <th>Categories</th>
      <th></th>
      <th></th>
      <th></th>
  </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
        <tr>
        <td><%= book.title %></td>
        <td><%= book.author.last_name %>, <%= book.author.first_name %></td>
        <td><%= reviews_link(book.id, book.reviews.count) %></td>
        <td><%= categories_link(book.id, book.book_categories.count) %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

